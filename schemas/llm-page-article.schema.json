{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/llm-page-article.schema.json",
  "title": "LLM Page: Article",
  "description": "Envelope and content schema for an LLM Page representing an article.",
  "type": "object",
  "required": [
    "schema_version",
    "type",
    "id",
    "source_url",
    "title",
    "language",
    "summary",
    "content",
    "tags",
    "last_modified",
    "content_version",
    "page_checksum",
    "license",
    "publisher"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Semantic version of the LLM Page schema used (e.g., 1.0.0)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "const": "article",
      "description": "Content type. For this schema, must be 'article'."
    },
    "id": {
      "type": "string",
      "description": "Stable identifier (URL or URN) unique within the publisher's domain.",
      "minLength": 1
    },
    "source_url": {
      "type": "string",
      "format": "uri",
      "description": "Canonical human-readable page URL."
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "language": {
      "type": "string",
      "description": "IETF BCP 47 language tag (e.g., en, en-US, fr).",
      "examples": ["en", "en-US", "fr"]
    },
    "summary": {
      "type": "string",
      "description": "Short summary (<= 1000 characters).",
      "maxLength": 1000
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "last_modified": {
      "type": "string",
      "format": "date-time"
    },
    "content_version": {
      "type": "string",
      "description": "Semantic version of the content itself.",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "page_checksum": {
      "type": "string",
      "description": "Base64-encoded SHA-256 of canonicalized content block.",
      "minLength": 44
    },
    "license": {
      "type": "string",
      "description": "SPDX identifier or URL to license terms."
    },
    "publisher": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["signed", "method"],
      "properties": {
        "signed": { "type": "boolean" },
        "method": { "type": "string", "enum": ["none", "jws", "dsse", "sigstore"] },
        "signature": { "type": "string", "description": "Signature material if signed != none." }
      },
      "default": { "signed": false, "method": "none" }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rel", "href"],
        "properties": {
          "rel": { "type": "string" },
          "href": { "type": "string", "format": "uri" },
          "type": { "type": "string" }
        }
      }
    },
    "content": {
      "type": "object",
      "required": ["body", "authors", "published_at"],
      "properties": {
        "subtitle": { "type": "string" },
        "authors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "email": { "type": "string", "format": "email" }
            }
          }
        },
        "published_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "reading_time_minutes": { "type": "number", "minimum": 0 },
        "categories": { "type": "array", "items": { "type": "string" } },
        "hero_image": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" },
            "alt": { "type": "string" }
          }
        },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "alt": { "type": "string" },
              "caption": { "type": "string" }
            }
          }
        },
        "sections": {
          "type": "array",
          "description": "Structured sections of the article.",
          "items": {
            "type": "object",
            "required": ["heading", "content"],
            "properties": {
              "heading": { "type": "string" },
              "content": { "type": "string", "description": "Markdown or plaintext." }
            }
          }
        },
        "body": {
          "type": "string",
          "description": "Full article body in plaintext or Markdown."
        }
      }
    }
  },
  "additionalProperties": false
}

