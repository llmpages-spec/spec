{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/llm-page-review.schema.json",
  "title": "LLM Page: Review",
  "type": "object",
  "required": ["schema_version","type","id","source_url","title","language","summary","content","tags","last_modified","content_version","page_checksum","license","publisher"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "type": { "const": "review" },
    "id": { "type": "string" },
    "source_url": { "type": "string", "format": "uri" },
    "title": { "type": "string" },
    "language": { "type": "string" },
    "summary": { "type": "string", "maxLength": 1000 },
    "tags": { "type": "array", "items": { "type": "string" } },
    "last_modified": { "type": "string", "format": "date-time" },
    "content_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "page_checksum": { "type": "string", "minLength": 44 },
    "license": { "type": "string" },
    "publisher": { "type": "object", "required": ["name", "url"], "properties": { "name": { "type": "string" }, "url": { "type": "string", "format": "uri" } } },
    "content": {
      "type": "object",
      "required": ["item","rating","body","author","published_at"],
      "properties": {
        "item": {
          "type": "object",
          "required": ["id","title"],
          "properties": {
            "id": { "type": "string" },
            "title": { "type": "string" },
            "url": { "type": "string", "format": "uri" },
            "type": { "type": "string" }
          }
        },
        "rating": {
          "type": "object",
          "required": ["value","scale"],
          "properties": {
            "value": { "type": "number", "minimum": 0 },
            "scale": { "type": "number", "minimum": 1 }
          }
        },
        "body": { "type": "string" },
        "author": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": { "type": "string" },
            "url": { "type": "string", "format": "uri" }
          }
        },
        "published_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" }
      }
    }
  },
  "additionalProperties": false
}

