{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmpages.org/schemas/1.0.0/llm-page-core.schema.json",
  "title": "LLM Page \u2014 Core v1.0.0",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "specVersion",
    "url",
    "title",
    "content",
    "dateModified",
    "language"
  ],
  "properties": {
    "specVersion": {
      "type": "string",
      "const": "1.0.0",
      "description": "Semantic version of the LLM Pages spec this payload conforms to."
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Canonical human-page URL."
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "content": {
      "type": "string",
      "minLength": 1,
      "description": "Full textual content of the page (normalized)."
    },
    "dateModified": {
      "type": "string",
      "format": "date-time"
    },
    "language": {
      "type": "string",
      "pattern": "^[A-Za-z]{2,3}(-[A-Za-z0-9]{2,8})*$",
      "description": "BCP 47 language tag (simplified pattern)."
    },
    "datePublished": {
      "type": "string",
      "format": "date-time"
    },
    "author": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "name"
      ]
    },
    "excerpt": {
      "type": "string"
    },
    "wordCount": {
      "type": "integer",
      "minimum": 0
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "media": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "title": "Image",
            "properties": {
              "type": {
                "const": "image"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "alt": {
                "type": "string"
              },
              "caption": {
                "type": "string"
              },
              "width": {
                "type": "integer",
                "minimum": 1
              },
              "height": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": [
              "type",
              "url"
            ],
            "additionalProperties": false
          },
          {
            "title": "Video",
            "properties": {
              "type": {
                "const": "video"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "transcript": {
                "type": "string"
              },
              "duration": {
                "type": "integer",
                "minimum": 0
              },
              "thumbnail": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "type",
              "url"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "alternateLanguagePages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "lang": {
            "type": "string",
            "pattern": "^[A-Za-z]{2,3}(-[A-Za-z0-9]{2,8})*$"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "lang",
          "url"
        ]
      }
    },
    "sourceContentHash": {
      "type": "string",
      "pattern": "^sha256-[A-Za-z0-9+/=]+$",
      "description": "Base64 of SHA-256 over normalized human content."
    }
  }
}
