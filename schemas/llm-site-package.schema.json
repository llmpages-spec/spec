{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/llm-site-package.schema.json",
  "title": "LLM Site Package",
  "type": "object",
  "required": ["schema_version", "items"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "generated_at": { "type": "string", "format": "date-time" },
    "publisher": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url", "type"],
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "type": { "type": "string", "enum": ["article","product","event","faq","howto","recipe","job","review"] },
          "href": { "type": "string", "format": "uri", "description": "Link to the LLM Page JSON if not embedded." },
          "data": { "type": "object", "description": "Embedded LLM Page payload for the item if provided." }
        },
        "oneOf": [
          { "required": ["href"] },
          { "required": ["data"] }
        ]
      }
    }
  },
  "additionalProperties": false
}

