{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/llm-page-faq.schema.json",
  "title": "LLM Page: FAQ",
  "description": "Envelope and content schema for an LLM Page representing FAQs.",
  "type": "object",
  "required": [
    "schema_version",
    "type",
    "id",
    "source_url",
    "title",
    "language",
    "summary",
    "content",
    "tags",
    "last_modified",
    "content_version",
    "page_checksum",
    "license",
    "publisher"
  ],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "type": { "const": "faq" },
    "id": { "type": "string", "minLength": 1 },
    "source_url": { "type": "string", "format": "uri" },
    "title": { "type": "string", "minLength": 1 },
    "language": { "type": "string" },
    "summary": { "type": "string", "maxLength": 1000 },
    "tags": { "type": "array", "items": { "type": "string" }, "default": [] },
    "last_modified": { "type": "string", "format": "date-time" },
    "content_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "page_checksum": { "type": "string", "minLength": 44 },
    "license": { "type": "string" },
    "publisher": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["signed", "method"],
      "properties": {
        "signed": { "type": "boolean" },
        "method": { "type": "string", "enum": ["none", "jws", "dsse", "sigstore"] },
        "signature": { "type": "string" }
      },
      "default": { "signed": false, "method": "none" }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rel", "href"],
        "properties": {
          "rel": { "type": "string" },
          "href": { "type": "string", "format": "uri" },
          "type": { "type": "string" }
        }
      }
    },
    "content": {
      "type": "object",
      "required": ["questions"],
      "properties": {
        "questions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["q", "a"],
            "properties": {
              "q": { "type": "string" },
              "a": { "type": "string" },
              "tags": { "type": "array", "items": { "type": "string" } },
              "related": { "type": "array", "items": { "type": "string", "format": "uri" } }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}

