{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://llmpages.org/schemas/1.0.0/llm-page-faq.schema.json",
  "title": "LLM Page \u2014 FAQ v1.0.0",
  "allOf": [
    {
      "$ref": "./llm-page-core.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": {
          "const": "faq"
        },
        "questions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "question",
              "answer"
            ]
          }
        }
      },
      "required": [
        "questions"
      ]
    }
  ]
}
