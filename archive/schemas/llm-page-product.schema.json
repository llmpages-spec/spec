{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/llm-page-product.schema.json",
  "title": "LLM Page: Product",
  "description": "Envelope and content schema for an LLM Page representing a product.",
  "type": "object",
  "required": [
    "schema_version",
    "type",
    "id",
    "source_url",
    "title",
    "language",
    "summary",
    "content",
    "tags",
    "last_modified",
    "content_version",
    "page_checksum",
    "license",
    "publisher"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": { "const": "product" },
    "id": { "type": "string", "minLength": 1 },
    "source_url": { "type": "string", "format": "uri" },
    "title": { "type": "string", "minLength": 1 },
    "language": { "type": "string" },
    "summary": { "type": "string", "maxLength": 1000 },
    "tags": { "type": "array", "items": { "type": "string" }, "default": [] },
    "last_modified": { "type": "string", "format": "date-time" },
    "content_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "page_checksum": { "type": "string", "minLength": 44 },
    "license": { "type": "string" },
    "publisher": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["signed", "method"],
      "properties": {
        "signed": { "type": "boolean" },
        "method": { "type": "string", "enum": ["none", "jws", "dsse", "sigstore"] },
        "signature": { "type": "string" }
      },
      "default": { "signed": false, "method": "none" }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rel", "href"],
        "properties": {
          "rel": { "type": "string" },
          "href": { "type": "string", "format": "uri" },
          "type": { "type": "string" }
        }
      }
    },
    "dynamic_endpoint": { "type": "string", "description": "Optional absolute or relative URL to a live LLM Page endpoint." },
    "dynamic_data_url": { "type": "string", "description": "Optional absolute or relative URL to live data for this page." },
    "content": {
      "type": "object",
      "required": [
        "sku",
        "description",
        "price",
        "currency",
        "availability",
        "images"
      ],
      "properties": {
        "sku": { "type": "string" },
        "gtin": { "type": "string", "description": "GTIN/EAN/UPC if available." },
        "brand": { "type": "string" },
        "category": { "type": "string" },
        "description": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "price": { "type": "number", "minimum": 0 },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
        "availability": { "type": "string", "enum": ["in_stock", "out_of_stock", "preorder", "backorder", "discontinued"] },
        "inventory": { "type": "integer", "minimum": 0 },
        "condition": { "type": "string", "enum": ["new", "used", "refurbished"] },
        "images": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "alt": { "type": "string" }
            }
          }
        },
        "dimensions": {
          "type": "object",
          "properties": {
            "width": { "type": "number", "minimum": 0 },
            "height": { "type": "number", "minimum": 0 },
            "depth": { "type": "number", "minimum": 0 },
            "unit": { "type": "string", "enum": ["mm", "cm", "in"] }
          }
        },
        "weight": {
          "type": "object",
          "properties": {
            "value": { "type": "number", "minimum": 0 },
            "unit": { "type": "string", "enum": ["g", "kg", "lb", "oz"] }
          }
        },
        "rating": { "type": "number", "minimum": 0, "maximum": 5 },
        "variants": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["sku"],
            "properties": {
              "sku": { "type": "string" },
              "title": { "type": "string" },
              "attributes": { "type": "object", "additionalProperties": { "type": ["string", "number", "boolean"] } },
              "price": { "type": "number", "minimum": 0 },
              "availability": { "type": "string", "enum": ["in_stock", "out_of_stock", "preorder", "backorder", "discontinued"] }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}

